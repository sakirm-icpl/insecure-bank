pipeline {
    agent any

    stages {
        stage('SCM') {
            steps {
                checkout scm
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def mvn = tool 'Default Maven'
                    withSonarQubeEnv() {
                        sh "${mvn}/bin/mvn sonar:sonar -Dsonar.java.binaries=target/classes"
                    }
                }
            }
        }
    }
}
